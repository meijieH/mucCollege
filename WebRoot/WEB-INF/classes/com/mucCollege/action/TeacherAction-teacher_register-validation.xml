<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="teacher.teanum">
		<field-validator type="required">
			<message>工号不能为空</message>
		</field-validator>
	</field>
	<field name="teacher.name">
		<field-validator type="required">
			<message>教师姓名不能为空</message>
		</field-validator>
	</field>
	<field name="teacher.password">
		<field-validator type="required">
			<message>密码不能为空</message>
		</field-validator>
	</field>
	<field name="teacher.position">
		<field-validator type="required">
			<message>职称不能为空</message>
		</field-validator>
	</field>
	<field name="teacher.intro">
		<field-validator type="required">
			<message>简介不能为空</message>
		</field-validator>
	</field>
	<field name="teacher.email">
		<field-validator type="required">
			<message>邮箱不能为空</message>
		</field-validator>
		<field-validator type="email">
			<message>邮箱格式非法</message>
		</field-validator>
	</field>
	<field name="teacher.phonenum">
		<field-validator type="required">
			<message>手机号不能为空</message>
		</field-validator>
		<field-validator type="int">
			<message>手机号只能为纯数字</message>
		</field-validator>
	</field>
</validators>